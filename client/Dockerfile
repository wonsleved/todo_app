FROM node:12.0-alpine AS builder
#FROM node:12.0-alpine as builder

WORKDIR /app

COPY package*.json ./
RUN npm install
COPY . .

EXPOSE 3000
#RUN npm run build

CMD ["npm", "run", "start"]

FROM nginx
EXPOSE 3000
COPY ./nginx/default.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /app/build /usr/share/nginx/html